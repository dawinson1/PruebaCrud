@using PruebaCrud.Models.DTO
@model List<ClienteRes>
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Listado Clientes</h1>
    
   <a asp-action="Crear" class="btn btn-primary mb-3">Crear Cliente</a>

</div>

<table class="table">
    <thead>
        <tr>
            <th>Acciones</th>
            <th>Documento</th>
            <th>Tipo Documento</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Fecha Ingreso</th>
            <th>Estado</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count>0)
        {
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        <a class="btn btn-primary" asp-action="Editar" asp-route-Docu_cli="@item.Docu_cli">Editar</a>
                        <a class="btn btn-danger" asp-action="Eliminar" asp-route-Docu_cli="@item.Docu_cli">Eliminar</a>
                    </td>

                    <td>
                        @item.Docu_cli
                    </td>

                    <td>
                        @item.Nom_identi
                    </td>

                    <td>
                        @item.Nombres
                    </td>

                    <td>
                        @item.Apellidos
                    </td>

                    <td>
                        @item.Fch_ingreso.ToString("dd-MM-yyyy")
                    </td>

                    <td>
                        @item.Nom_est
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
